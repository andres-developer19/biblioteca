/*..............................inicio-escuela.php..............................*/

function mostrar(google)
{
document.all[google].style.visibility='visible';

}

function mostrar(contacto)
{
document.all[contacto].style.visibility='visible';
}

function mostrar(registro)
{
document.all[registro].style.visibility='visible';
}

function ocultar(google)
{
document.all[google].style.visibility='hidden';
}

function ocultar(contacto)
{
document.all[google].style.visibility='hidden';
}

function ocultar(registro)
{
document.all[google].style.visibility='hidden';
}

